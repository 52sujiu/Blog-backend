{
  "info": {
    "name": "博客系统API接口集合",
    "description": "博客系统所有API接口的Postman测试集合",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8101/api",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "用户管理",
      "item": [
        {
          "name": "用户注册",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\",\n  \"confirmPassword\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/user/register",
              "host": ["{{baseUrl}}"],
              "path": ["user", "register"]
            }
          }
        },
        {
          "name": "用户登录",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"account\": \"testuser\",\n  \"password\": \"password123\",\n  \"rememberMe\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/user/login",
              "host": ["{{baseUrl}}"],
              "path": ["user", "login"]
            }
          }
        },
        {
          "name": "获取当前用户信息",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/user/current",
              "host": ["{{baseUrl}}"],
              "path": ["user", "current"]
            }
          }
        },
        {
          "name": "用户注销",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/user/logout",
              "host": ["{{baseUrl}}"],
              "path": ["user", "logout"]
            }
          }
        },
        {
          "name": "更新个人信息",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nickname\": \"新昵称\",\n  \"bio\": \"这是更新后的个人简介\",\n  \"location\": \"北京\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/user/profile",
              "host": ["{{baseUrl}}"],
              "path": ["user", "profile"]
            }
          }
        }
      ]
    },
    {
      "name": "文章管理",
      "item": [
        {
          "name": "发布文章",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"测试文章标题\",\n  \"slug\": \"test-article\",\n  \"summary\": \"这是一篇测试文章的摘要\",\n  \"content\": \"# 测试文章\\n\\n这是文章内容...\",\n  \"categoryId\": 1,\n  \"tagIds\": [1, 2],\n  \"isOriginal\": true,\n  \"status\": 2\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/articles",
              "host": ["{{baseUrl}}"],
              "path": ["articles"]
            }
          }
        },
        {
          "name": "获取文章列表",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/articles?current=1&size=10",
              "host": ["{{baseUrl}}"],
              "path": ["articles"],
              "query": [
                {
                  "key": "current",
                  "value": "1"
                },
                {
                  "key": "size",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "获取文章详情",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/articles/1",
              "host": ["{{baseUrl}}"],
              "path": ["articles", "1"]
            }
          }
        },
        {
          "name": "文章点赞",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/articles/1/like",
              "host": ["{{baseUrl}}"],
              "path": ["articles", "1", "like"]
            }
          }
        },
        {
          "name": "获取热门文章",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/articles/hot?limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["articles", "hot"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "分类管理",
      "item": [
        {
          "name": "获取分类列表",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/categories",
              "host": ["{{baseUrl}}"],
              "path": ["categories"]
            }
          }
        },
        {
          "name": "获取分类详情",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/categories/1",
              "host": ["{{baseUrl}}"],
              "path": ["categories", "1"]
            }
          }
        },
        {
          "name": "创建分类",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"新分类\",\n  \"slug\": \"new-category\",\n  \"description\": \"这是一个新分类\",\n  \"color\": \"#1890ff\",\n  \"parentId\": 0,\n  \"sortOrder\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/categories",
              "host": ["{{baseUrl}}"],
              "path": ["categories"]
            }
          }
        }
      ]
    },
    {
      "name": "标签管理",
      "item": [
        {
          "name": "获取标签列表",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/tags",
              "host": ["{{baseUrl}}"],
              "path": ["tags"]
            }
          }
        },
        {
          "name": "获取热门标签",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/tags/hot?limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["tags", "hot"],
              "query": [
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "创建标签",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"新标签\",\n  \"slug\": \"new-tag\",\n  \"description\": \"这是一个新标签\",\n  \"color\": \"#87d068\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tags",
              "host": ["{{baseUrl}}"],
              "path": ["tags"]
            }
          }
        }
      ]
    },
    {
      "name": "评论管理",
      "item": [
        {
          "name": "获取文章评论",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/articles/1/comments?current=1&size=10",
              "host": ["{{baseUrl}}"],
              "path": ["articles", "1", "comments"],
              "query": [
                {
                  "key": "current",
                  "value": "1"
                },
                {
                  "key": "size",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "发表评论",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"这是一条测试评论\",\n  \"parentId\": 0\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/articles/1/comments",
              "host": ["{{baseUrl}}"],
              "path": ["articles", "1", "comments"]
            }
          }
        },
        {
          "name": "评论点赞",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{baseUrl}}/comments/1/like",
              "host": ["{{baseUrl}}"],
              "path": ["comments", "1", "like"]
            }
          }
        }
      ]
    },
    {
      "name": "搜索功能",
      "item": [
        {
          "name": "全文搜索",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/search?keyword=测试&current=1&size=10",
              "host": ["{{baseUrl}}"],
              "path": ["search"],
              "query": [
                {
                  "key": "keyword",
                  "value": "测试"
                },
                {
                  "key": "current",
                  "value": "1"
                },
                {
                  "key": "size",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "搜索建议",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/search/suggest?keyword=测试&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["search", "suggest"],
              "query": [
                {
                  "key": "keyword",
                  "value": "测试"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "系统配置",
      "item": [
        {
          "name": "获取系统配置",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/system/config",
              "host": ["{{baseUrl}}"],
              "path": ["system", "config"]
            }
          }
        }
      ]
    }
  ]
}
